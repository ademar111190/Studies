<resources>

    <!-- Bases -->

    <style name="AbstractTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="BaseTheme" parent="AbstractTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
    </style>

    <!-- App -->

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="AppAlertDialog.CustomView">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- TextView -->

    <style name="PrimaryText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SecondaryText" parent="android:Widget.Holo.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Toolbar -->

    <style name="AppToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Start -->

    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_launch</item>
    </style>

</resources>
